<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillagioApp.HorariosPage"
             Title="Horários disponíveis">

    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Spacing="-10" Margin="0,110">

            <!-- Logo (mantida) -->
            <Image
                Source="logo_villagio_v2.png"
                HeightRequest="185"
                Aspect="AspectFit"
                Margin="0,0,0,50"
                SemanticProperties.Description="Logo Villagio" />

            <!-- Layout das semanas (UNIQUE) -->
            <VerticalStackLayout x:Name="SemanasLayout" Spacing="-20" />

            <!-- Área de cabeçalho e loading -->
            <Grid RowDefinitions="Auto, Auto" Padding="20">

                <!-- Cabeçalho -->
                <VerticalStackLayout Grid.Row="0" Spacing="8">
                    <Label x:Name="TituloDiaHeader"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           Text="Dia selecionado" />
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Button x:Name="BtnRecarregar"
                                Text="Recarregar"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Clicked="BtnRecarregar_Clicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Estado de carregamento -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   Grid.Row="1"
                                   IsRunning="False"
                                   IsVisible="False"
                                   Color="#4CAF50"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
