<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillagioApp.PagamentoPage"
             Title="Pagamento"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="-20" Margin="0,30">

            <!-- Logo -->
            <Image
                Source="logo_villagio_v2.png"
                HeightRequest="185"
                Aspect="AspectFit"
                Margin="0,0,0,30"
                SemanticProperties.Description="Logo Villagio" />

            <!-- Título -->
            <Border BackgroundColor="#F0F0F0"
                    Stroke= "Green"
                    StrokeShape="RoundRectangle 10"
                    WidthRequest="280"
                    Padding="20"
                    Margin="20,30,20,0">
                <Label Text="Resumo da reserva"
                       FontSize="26"
                       FontAttributes="Italic"
                       FontFamily="CanvasIn"
                       HorizontalOptions="Center"
                       TextColor="Black" />
            </Border>

            <!-- Dados da reserva -->
            <Border BackgroundColor="#F0F0F0"
                    Stroke="Purple"
                    StrokeShape="RoundRectangle 15"
                    Padding="20"
                    Margin="20,10,20,20"
                    WidthRequest="380">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="DataLabel" FontSize="14" FontFamily="Sans3" FontAttributes="Bold" TextColor="Green" />
                    <Label x:Name="HorarioLabel" FontSize="14" FontFamily="Sans3" FontAttributes="Bold" TextColor="Green" />
                    <Label x:Name="TotalLabel" FontSize="14" FontFamily="Sans3" TextColor="Purple" />
                    <Label x:Name="AdultosLabel" FontSize="14" FontFamily="Sans3" TextColor="Purple" />
                    <Label x:Name="MeiaLabel" FontSize="14" FontFamily="Sans3" TextColor="Purple" />
                    <Label x:Name="NaoPagantesLabel" FontSize="14" FontFamily="Sans3" TextColor="Purple" />
                    <Label x:Name="CafeLabel" FontSize="14" FontFamily="Sans3" TextColor="Purple" />
                    <Label x:Name="ValorFinalLabel" FontSize="16" FontAttributes="Bold" TextColor="Green" />
                </VerticalStackLayout>
            </Border>
            <VerticalStackLayout Spacing="-10">
            <!-- Botão de pagamento -->
            <Button Text="Realizar Pagamento"
                    Clicked="OnRealizarPagamentoClicked"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Margin="40,10"
                    HeightRequest="45"
                    HorizontalOptions="Center"
                    WidthRequest="250" />

                <!-- QR Code e chave PIX -->
                <Border x:Name="PixBorder"
        BackgroundColor="#F0F0F0"
        Stroke="Green"
        StrokeShape="RoundRectangle 10"
        Padding="10"
        Margin="0,10,0,0"
        WidthRequest="300"
        HorizontalOptions="Center"
        IsVisible="False">
                    <!-- Aqui está a mudança -->
                    <VerticalStackLayout Margin="20,20,20,0" Spacing="15">
                        <Image Source="qrcode_exemplo.png"
               HeightRequest="200"
               Aspect="AspectFit"
               HorizontalOptions="Center" />
                        <Label Text="Chave PIX para copiar:"
               FontSize="14"
               FontFamily="Sans3"
               FontAttributes="Bold"
               TextColor="Purple"
               HorizontalOptions="Center" />
                        <Label x:Name="PixLabel"
               FontSize="14"
               FontFamily="Sans3" 
               TextColor="Black"
               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>