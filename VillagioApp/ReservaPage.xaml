<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillagioApp.ReservaPage"
             Title="Reserva">

    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Spacing="-20" Margin="0,30" >


            <!-- Logo -->
            <Image
                Source="logo_villagio_v2.png"
                HeightRequest="185"
                Aspect="AspectFit"
                Margin="0,0,0,30"
                SemanticProperties.Description="Logo Villagio" />


            <!-- Border do título -->
            <Border BackgroundColor="#F0F0F0"
                    Stroke="Purple"
                    StrokeShape="RoundRectangle 10"
                    WidthRequest="280"
                    Padding="20"
                    Margin="20,30,20,0">
                <Label Text="Complete a reserva"
                       FontSize="26"
                       FontFamily="CanvasIn"
                       HorizontalOptions="Center"
                       TextColor="Black" />
            </Border>

            <!-- Border dos dados -->
            <Border BackgroundColor="#F0F0F0"
                    Stroke="Purple"
                    StrokeShape="RoundRectangle 15"
                    Padding="20"
                    Margin="20,10,20,20"
                    WidthRequest="380">

                <VerticalStackLayout Spacing="15">

                    <!-- Total de visitantes -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Total:" FontSize="18" TextColor="Black" />
                        <Entry x:Name="TotalEntry"
                               WidthRequest="80"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />
                        <Button Text="-" Clicked="OnDiminuirTotalClicked" WidthRequest="40" />
                        <Button Text="+" Clicked="OnAumentarTotalClicked" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <!-- Adultos -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Adultos:" FontSize="18" TextColor="Black" />
                        <Entry x:Name="AdultoEntry"
                               WidthRequest="80"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />
                        <Button Text="-" Clicked="OnDiminuirAdultoClicked" WidthRequest="40" />
                        <Button Text="+" Clicked="OnAumentarAdultoClicked" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <!-- Meia entrada -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Meia:" FontSize="18" TextColor="Black" />
                        <Entry x:Name="MeiaEntry"
                               WidthRequest="80"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />
                        <Button Text="-" Clicked="OnDiminuirMeiaClicked" WidthRequest="40" />
                        <Button Text="+" Clicked="OnAumentarMeiaClicked" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <!-- Não pagantes -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Não pagantes:" FontSize="18" TextColor="Black" />
                        <Entry x:Name="NaoPaganteEntry"
                               WidthRequest="80"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />
                        <Button Text="-" Clicked="OnDiminuirNaoPaganteClicked" WidthRequest="40" />
                        <Button Text="+" Clicked="OnAumentarNaoPaganteClicked" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <!-- Café opcional -->
                    <Border BackgroundColor="#F0F0F0"
                            Stroke="Green"
                            StrokeShape="RoundRectangle 10"
                            Padding="10"
                            Margin="0,10,0,0"
                            WidthRequest="300"
                            HorizontalOptions="Center">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Label Text="Incluir café da manhã?" FontSize="18" TextColor="Green" />
                            <CheckBox x:Name="CafeCheckBox" CheckedChanged="OnCafeCheckedChanged" />
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Valor final -->
                    <Label x:Name="ValorFinalLabel"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Green"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0" />

                    <!-- Botão confirmar -->
                    <Button Text="Confirmar Reserva"
                            Clicked="OnConfirmarReservaClicked"
                            BackgroundColor="Green"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Margin="40,10"
                            HeightRequest="45"
                            HorizontalOptions="Center"
                            WidthRequest="250" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

